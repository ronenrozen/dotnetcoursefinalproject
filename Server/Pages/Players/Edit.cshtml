@page
@model FinalProjectDotNet.Pages.Players.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Player</h1>

@*<h4>TblPlayers</h4>*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TblPlayers.Id" />
            <div class="form-group">
                <label asp-for="TblPlayers.Email" class="control-label"></label>
                <input asp-for="TblPlayers.Email" class="form-control" />
                <span asp-validation-for="TblPlayers.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TblPlayers.Password" class="control-label"></label>
                <input type="password" asp-for="TblPlayers.Password" class="form-control" />
                <span asp-validation-for="TblPlayers.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to Players List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
